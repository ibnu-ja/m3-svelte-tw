{
    "name": "Svelte Material M3",
    "workspaceFolder": "/app",
    "remoteUser": "root",
    "containerUser": "root",
    "forwardPorts": [
        5173
    ],
    "image": "mcr.microsoft.com/devcontainers/typescript-node",
    "runArgs": [
        "--security-opt",
        "label=disable"
    ],
    "postCreateCommand": "chown -R root:root /app 2>/dev/null || true"
}